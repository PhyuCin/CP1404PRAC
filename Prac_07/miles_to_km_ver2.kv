<Widget>:
    canvas.before:
        Color:
            rgba: 0.6, 0.3, 0.8, 0.3
        Rectangle:
            pos: self.pos
            size: self.size
    color: 0.2, 0.1, 0.8, 0.6

<Button>:
#    font_name: 'BuxtonSketch.ttf'
    font_size: 30
    background_normal: ''
    background_down: 'atlas://data/images/defaulttheme/button'
    canvas.after:
        Color:
            rgba: 0.6, 0.3, 0.8, 0.6
        Line:
            rectangle: self.x + 1, self.y + 1, self.width - 1, self.height - 1

BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: ''
            font_size: 48
            multiline: False
            on_text: app.handle_calculate(input_number.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(+1, input_number.text)
                on_press: app.handle_calculate(input_number.text)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1, input_number.text)
                on_press: app.handle_calculate(input_number.text)
    Label:
        id: output_label
        font_size: 48
        color: (1, 1, 0, 1)
